@using Services.Models;

@model IEnumerable<MounthAmountViewModel>
@{
    ViewData["Title"] = "Month DueAmount";
}

<div class="text-center">
    <p>Задължения за месец: @DateTime.Now.ToString("MMM yyyy").ToUpper()</p>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead class="text-center">
            <th>Имот</th>
            <th>Собственик</th>
            <th>Бр.Обитатели</th>
            <th>Задължения Общи части</th>
            <th>Задължения Ремонт</th>
            <th>Плащане</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@item.PropertyName</td>
                    <td>@item.ResidentName</td>
                    <td>@item.ResidentsCount</td>
                    <td>@item.RegularDueAmount</td>
                    <td>@item.NotRegularDueAmount</td>
                    <td><button>Плащане</button></td>
                </tr>
             }
            </tbody>
        </table>
</div>

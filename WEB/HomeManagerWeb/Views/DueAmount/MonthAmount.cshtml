@using Services.Models;

@model IEnumerable<MounthAmountViewModel>
@{
    ViewData["Title"] = "Month DueAmount";
}

<div class="text-center">
    <p>Задължения за месец: @DateTime.Now.ToString("MMM yyyy").ToUpper()</p>
</div>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="table-responsive">
        <div class="table-responsive mdi-margin">
            <table class="table table-striped table-bordered table-hover">
                <thead class="text-center text-info border-top">
                <th class="text-warning">Имот</th>
                <th class="text-warning">Собственик</th>
                <th class="text-warning">Бр.Обитатели</th>
                <th class="text-warning">Задължения Общи части</th>
                <th class="text-warning">Задължения Ремонт</th>
                <th class="text-warning">Плащане</th>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td class="text-warning">@item.PropertyName</td>
                            <td class="text-warning">@item.ResidentName</td>
                            <td class="text-warning">@item.ResidentsCount</td>
                            <td class="text-warning">@item.RegularDueAmount лв.</td>
                            <td class="text-warning">@item.NotRegularDueAmount лв.</td>
                            <td class="text-warning"><button class="btn-inverse-warning">Плащане</button></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
